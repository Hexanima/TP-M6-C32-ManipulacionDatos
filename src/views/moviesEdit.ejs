<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Editando: <%- movie.title %></title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <figure>
      <img src="/img/logo-DH.png" alt="Logo Digital House" />
    </figure>
    <form
      action="/movies/update/<%- movie.id %>?_method=put"
      method="post"
      style="
        display: flex;
        flex-direction: column;
        gap: 5px;
        align-items: flex-start;
      "
    >
      <label for="title">Titulo</label>
      <input type="text" name="title" id="title" value="<%- movie.title %>" />

      <label for="rating">Rating</label>
      <input type="text" name="rating" id="rating" value="<%- movie.rating %>" />

      <label for="awards">Premios</label>
      <input type="text" name="awards" id="awards" value="<%- movie.awards %>" />

      <label for="release_date">Fecha de estreno</label>
      <input type="datetime-local" name="release_date" id="release_date" value="<%- movie.release_date %>" />

      <label for="length">Duracion (Minutos)</label>
      <input type="text" name="length" id="length" value="<%- movie.length %>" />

      <label for="genre_id">Genero</label>
      <select name="genre_id" id="genre_id">
        <% genres.forEach(genre => { %>
        <option value="<%- genre.id %>" <% if (movie.genre_id == genre.id) { %>
         selected
        <% } %>><%- genre.name %></option>
        <% }) %>
      </select>
      <button type="submit">ENVIAR</button>
    </form>
  </body>
</html>
